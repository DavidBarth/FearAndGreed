@model IEnumerable<FearAndGreed.Models.FearAndGreedModel>

@{
    ViewData["Title"] = "View";
}
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
body {
  font-family: Arial;
  color: white;
}

.split {
  height: 100%;
  width: 50%;
  position: fixed;
  z-index: 1;
  top: 0;
  overflow-x: hidden;
  padding-top: 20px;
}

.left {
  left: 0;
  background-color: grey;
}

.right {
  right: 0;
  background-color: slategrey;
}
</style>

<h1>View</h1>
<div>
    <div class="split left">
        <h4>Current Fear And Greed Index of Markets</h4>
        @foreach (var item in Model)
        {
            <dl class="row">
                <dd class="col-sm-10">
                    <div>
                        Index Value: @item.IndexValue
                    </div>
                </dd>
                <dd class="col-sm-10">
                    <Div>
                        Classification: @item.IndexClassification
                    </Div>
                </dd>
                <dd class="col-sm-10">
                    <div>
                        Date: @item.IndexDate.Day/@item.IndexDate.Month/@item.IndexDate.Year
                    </div>
                </dd>
                <dd class="col-sm-10">
                    <div>
                        Time till Next Update: @item.IndexNextUpdate.Hour hr(s)
                    </div>
                </dd>
            </dl>
        }
    </div>
    <div class="split right">
        <form method="post">
            <label for="averageInput">Input value to calculate average index for</label>
            <input id="daysToCountAverageFor" name="daysToCountAverageFor" placeholder="5"></>
            <input type="submit">
        </form>
    </div>
</div>
